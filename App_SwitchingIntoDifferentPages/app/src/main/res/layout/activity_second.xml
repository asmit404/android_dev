<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5"
    tools:ignore="ExtraText">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_selected_bouquet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Selected Bouquet:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- Image of selected bouquet -->
    <ImageView
        android:id="@+id/iv_selected_bouquet"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tv_selected_bouquet_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerInside"
        android:contentDescription="Selected Bouquet" />

    <!-- Return to Home Page button -->
    <Button
        android:id="@+id/btn_return_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Home Page"
        android:layout_below="@+id/iv_selected_bouquet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/tv_order_delivery_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Type: "
        android:textSize="18sp"
        android:layout_below="@+id/iv_selected_bouquet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
